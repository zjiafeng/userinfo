<!--miniprogram/pages/detail/detail.wxml-->
<view class="detail">

    <block wx:if="{{ !isHidden }}">
      <button wx:if="{{ !isFriend }}" bindtap="handleAddFriend">添加好友</button>
    </block>
    <view class="detail-item">
      <text>昵称：</text>
      <text>{{ detail.nickName }}</text>
    </view>
    <view class="detail-item">
      <text>头像：</text>
      <image src="{{ detail.userPhoto }}" />
    </view>
    <view class="detail-item">
      <text>个性签名：</text>
      <text>{{ detail.signature }}</text>
    </view>
    <view class="detail-item">
      <text>手机号：</text>
      <block wx:if="{{ isFriend }}">
        <text class="detail-phone">{{ detail.phone }} </text>
        <call-phone wx:if="{{ detail.phone }}" phone="{{ detail.phone }}" />
      </block>
      <text wx:else>仅好友可见</text>
    </view>
    <view class="detail-item">
      <text>微信号：</text>
      <block wx:if="{{ isFriend }}">
        <text class="detail-weixin">{{ detail.weixin }} </text>
        <copy-text wx:if="{{ detail.weixin }}" copyText="{{ detail.weixin }}" />
      </block>
      <text wx:else>仅好友可见</text>
    </view>

</view>
