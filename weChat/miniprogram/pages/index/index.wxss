/* miniprogram/pages/index/index.wxss */
swiper {
  height: 400rpx;
  margin: 20rpx;
  overflow: hidden;
}

swiper image {
  border-radius: 10rpx;
  width: 100%;
  overflow: hidden;
}

.index_tab {
  display: flex;
}

.index_tab view {
  margin:10rpx 50rpx;
  flex: 1;
  text-align: center;
}

.index_tab view.active {
  border-bottom: 4rpx solid #409EFF;
  /* padding:0 10rpx; */
}

.index_list {
  display: flex;
  flex-wrap: wrap;
  color: #409EFF;
}

.index_list_item {
  width: 50%;
  margin: 10rpx 0;
}

.index_list_item image {
  width: 90%;
  height: 250rpx;
  margin: 0 auto;
  display: block;
  border-radius: 6rpx;
}

.index_list_text {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}